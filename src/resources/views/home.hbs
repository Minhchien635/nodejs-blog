<div class="mt-4">
    <div class="row">
        {{#each posts}}
            <div class="col-sm-6 col-lg-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <a href="/posts/{{this._id}}">
                            <h5 class="card-title">{{this.title}}</h5>     
                        </a>   
                        {{{this.content}}}  
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div> 
 